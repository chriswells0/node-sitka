{
  "name": "sitka",
  "version": "0.8.1",
  "description": "An extremely lightweight but powerful Node.js logger that's great for modern cloud/serverless applications.",
  "keywords": [
    "log",
    "logger",
    "lightweight",
    "flexible",
    "aws",
    "cloud",
    "lambda",
    "serverless",
    "typescript"
  ],
  "author": {
    "name": "Chris Wells",
    "url": "https://chriswells.io"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriswells0/node-sitka.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean; npm run lint && tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "clean": "rm -r ./dist",
    "lint": "tslint src/**/*.ts",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "npm run build && npm run changelog"
  },
  "devDependencies": {
    "@types/node": "^10.9.2",
    "conventional-changelog-cli": "^2.0.5",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
