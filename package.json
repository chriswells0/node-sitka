{
  "name": "sitka",
  "version": "0.8.1",
  "description": "An extremely lightweight but powerful Node.js logger that's great for modern cloud/serverless applications.",
  "keywords": [
    "log",
    "logger",
    "lightweight",
    "flexible",
    "aws",
    "cloud",
    "lambda",
    "serverless",
    "typescript"
  ],
  "author": {
    "name": "Chris Wells",
    "url": "https://chriswells.io"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriswells0/node-sitka.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean; npm run lint && tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog:unreleased": "conventional-changelog -p angular -u",
    "clean": "rm -r ./.nyc_output; rm -r ./coverage; rm -r ./dist",
    "clean:all": "npm run clean; rm -r ./node_modules",
    "cover": "nyc --reporter=html --reporter=text npm run test",
    "cover:check": "nyc --reporter=html --reporter=text --check-coverage --statements 95 --branches 95 --functions 100 --lines 95 npm run test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint src/**/*.ts",
    "preversion": "npm run build && npm run cover:check",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "test": "mocha",
    "version": "npm run build && npm run changelog"
  },
  "devDependencies": {
    "@types/node": "^10.10.3",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^2.0.5",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "test-console": "^1.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
