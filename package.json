{
  "name": "sitka",
  "version": "0.8.1",
  "description": "An extremely lightweight but powerful Node.js logger that's great for modern cloud/serverless applications.",
  "keywords": [
    "log",
    "logger",
    "lightweight",
    "flexible",
    "aws",
    "cloud",
    "lambda",
    "serverless",
    "typescript"
  ],
  "author": {
    "name": "Chris Wells",
    "url": "https://chriswells.io"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriswells0/node-sitka.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean; npm run lint && tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog:unreleased": "conventional-changelog -p angular -u",
    "clean": "rm -r ./coverage; rm -r ./dist",
    "clean:all": "npm run clean; rm -r ./node_modules",
    "cover": "istanbul cover _mocha -- -R spec test/*.js",
    "cover:check": "istanbul check-coverage --statements 95 --branches 95 --functions 100 --lines 95",
    "lint": "tslint src/**/*.ts",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build && npm run cover && npm run cover:check",
    "test": "mocha --reporter spec",
    "version": "npm run prepare && npm run changelog"
  },
  "devDependencies": {
    "@types/node": "^10.9.2",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^2.0.5",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "test-console": "^1.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
