{
  "name": "sitka",
  "version": "1.0.5",
  "description": "An extremely lightweight but powerful Node.js logger that's great for modern cloud/serverless applications.",
  "keywords": [
    "log",
    "logger",
    "lightweight",
    "flexible",
    "aws",
    "cloud",
    "lambda",
    "serverless",
    "typescript"
  ],
  "author": {
    "name": "Chris Wells",
    "url": "https://chriswells.io"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriswells0/node-sitka.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean; npm run lint && tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog:unreleased": "conventional-changelog -p angular -u",
    "clean": "rm -r ./.nyc_output; rm -r ./coverage; rm -r ./dist",
    "clean:all": "npm run clean; rm -r ./node_modules",
    "cover": "nyc npm run test",
    "cover:check": "nyc --check-coverage npm run test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "preversion": "npm run build && npm run cover:check",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "test": "mocha",
    "upgrade": "npx npm-check -u",
    "version": "npm run build && npm run changelog"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.6",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.0.12",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.12",
    "test-console": "^1.1.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
